{
  "scripts": {
    "dev": "npx ts-node src/index.ts",
    "setup-db-linux": "chmod +x tools/setupLocalDbContainer.sh &&  npm run db-local-linux && npm run restore-seed-db",
    "setup-db-win": "npm run db-local-win && npm run restore-seed-db",
    "db-local-linux": "sh ./tools/setup/setupLocalDbContainer.sh",
    "db-local-win": "powershell ./tools/setup/setupLocalDbContainer.ps1",
    "restore-seed-db": "npx ts-node src/infra/databases/setup/execute.ts",
    "deploy-linux": "npm run setup-db-linux && sh ./tools/run/localApi.sh",
    "deploy-win": "npm run setup-db-win && powershell ./tools/run/localApi.ps1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "mssql": "^10.0.4",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/mssql": "^9.1.6"
  }
}
