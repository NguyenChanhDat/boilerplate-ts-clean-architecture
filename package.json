{
  "scripts": {
    "dev": "rm -rf dist && npm run build && node dist/src/index.js",
    "setup-linux": "chmod +x tools/setup/setupLocalDbContainer.sh &&  npm run db-local-linux && npm run restore-seed-db",
    "setup-win": "npm run db-local-win && npm run restore-seed-db",
    "db-local-linux": "sh ./tools/setup/setupLocalDbContainer.sh",
    "db-local-win": "powershell ./tools/setup/setupLocalDbContainer.ps1",
    "restore-seed-db": "npx ts-node src/infra/databases/setup/execute.ts",
    "deploy-linux": "npm run setup-linux && sh ./tools/run/localApi.sh",
    "deploy-win": "npm run setup-win && powershell ./tools/run/localApi.ps1",
    "test": "npm run build && npx jest --config jest.config.js",
    "build": "npx swc ./src -d dist && npx swc ./__test__ -d dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "mssql": "^10.0.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mssql": "^9.1.6",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.13.0"
  },
  "type": "commonjs"
}
